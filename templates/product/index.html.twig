{% extends 'base.html.twig' %}

{% block title %}All Products{% endblock %}

{% block body %}
<div class="d-flex">
    {% if products|length > 0%}
        {% for product in products %}
            {{ include("product/_product.html.twig", {product: product})}}
        {% endfor %}
    {% else %}
        No products in database!
    {% endif %}
</div>
{% endblock %}
