{% extends 'base.html.twig' %}

{% block title %}All Categories{% endblock %}

{% block bread %}
    <li>/</li><li class="link-primary"><a href="{{ path('app_categories', {categories: categories})}}">Categories</a></li>
    <li>/</li><li class="link-primary active" aria-current="page">Edit</li>
{% endblock %}


{% block body %}
    <h6 class="title">Edit category - {{ category.name }}</h6>
    <div class="sm:size-fit">
        {{ form_start(form) }}
            <div>
                {{ form_label(form.name, 'Name', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-widget'}})}}
                {{ form_errors(form.name) }}
            </div>
            <div>
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-widget'}})}}
                {{ form_errors(form.description) }}
            </div>
            <button class="btn-primary" type-"submit">Update category</button>
        {{ form_end(form) }}
    <div>
    <div class="mt-2">
        <a class="btn-primary delete"  href="{{ path('app_category_delete', {category: category.id}) }}">Delete category</a>
    </div>
{% endblock %}
